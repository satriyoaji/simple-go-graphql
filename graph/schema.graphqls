type Creator {
  id: ID!
  name: String!
  age: Int!
  arts: [Art!]
}

type Art {
  id: ID!
  name: String!
  type: TypeOf!
}

enum TypeOf {
  SONG
  FILM
  PICTURE
}

type Query {
  Creator(id: ID!): Creator!
  Creators: [Creator!]!
  art(id: ID!): Art!
  arts: [Art!]!
}

input NewCreator {
  name: String!
  age: Int!
  arts: [NewArt!]
}

input NewArt {
  name: String!
  type: TypeOf!
}

type Mutation {
  createCreator(input: NewCreator): Creator!
  createArt(input: NewArt): Art!
}
